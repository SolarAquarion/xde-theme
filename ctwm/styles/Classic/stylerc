divert(PROLOGUE)dnl
DecorateTransients
divert(FONTS)dnl
TitleFont "-adobe-helvetica-bold-r-normal--*-120-*-*-*-*-*-*"
ResizeFont "-adobe-helvetica-bold-r-normal--*-120-*-*-*-*-*-*"
MenuFont "-adobe-helvetica-bold-r-normal--*-120-*-*-*-*-*-*"
IconFont "-adobe-helvetica-bold-r-normal--*-100-*-*-*-*-*-*"
IconManagerFont "-adobe-helvetica-bold-r-normal--*-100-*-*-*"
divert(VARIABLES)dnl
divert(-1)
define(`twm_deffore',			`"rgb:2/a/9"')
define(`twm_defback',			`"gray85"')
define(`twm_BorderColor',		`"slategrey"')
define(`twm_BorderTileForeground',	`"black"')
define(`twm_BorderTileBackground',	`"white"')
define(`twm_TitleForeground',		`"gray85"')
define(`twm_TitleBackground',		`"rgb:2/a/9"')
define(`twm_IconForeground',		`"gray85"')
define(`twm_IconBackground',		`"rgb:2/a/9"')
define(`twm_IconBorderColor',		`"gray85"')
define(`twm_IconManagerForeground',	`"gray85"')
define(`twm_IconManagerBackground',	`"rgb:2/a/9"')
define(`twm_IconManagerHighlight',	`"black"')
divert(COLOR)dnl
    # Default colors for sizing and information windows
    DefaultBackground	    "rgb:2/a/9"
    DefaultForeground	    "gray85"

    # Menu Colors
    MenuBackground	    "rgb:2/a/9"
    MenuForeground	    "gray85"
ifelse(TWM_TYPE,`twm',`
    MenuBorderColor	    "slategrey"')
    MenuTitleBackground	    "gray70"
    MenuTitleForeground	    "rgb:2/a/9"
divert(VARIABLES)dnl
MoveDelta 3
divert(VARIABLES)dnl
syscmd(`test -r "'TWM_CONFIG_HOME`/apps"')dnl
ifelse(sysval, 0, `sinclude(TWM_CONFIG_HOME`/apps')', `sinclude(TWM_CONFIG_SDIR`/apps''))
divert(FUNCTIONS)dnl
#
# Define some useful functions for motion-based actions.
#
Function "move-or-lower" { f.move f.deltastop f.lower }
Function "move-or-raise" { f.move f.deltastop f.raise }
Function "move-or-iconify" { f.move f.deltastop f.iconify }
divert(BUTTONS)dnl
#
# Set some useful bindings.  Sort of uwm-ish, sort of simple-button-ish
#
Button1 = : root : f.menu "twmops"
Button3 = : root : f.menu "defops"

Button1 = m : window|icon : f.function "move-or-lower"
Button2 = m : window|icon : f.iconify
Button3 = m : window|icon : f.function "move-or-raise"

Button1 = : title : f.function "move-or-raise"
Button2 = : title : f.raiselower
Button3 = : title : f.menu "windowops"

Button1 = : icon : f.function "move-or-iconify"
Button2 = : icon : f.iconify

Button1 = : iconmgr : f.iconify
Button2 = : iconmgr : f.iconify
divert(BINDINGS)dnl
syscmd(`test -r "'TWM_CONFIG_HOME`/keys"')dnl
ifelse(sysval, 0, `sinclude(TWM_CONFIG_HOME`/keys')', `sinclude(TWM_CONFIG_SDIR`/keys')')
divert(MENUS)dnl
syscmd(`test -r "'TWM_CONFIG_HOME`/winmenu"')dnl
ifelse(sysval, 0, `sinclude(TWM_CONFIG_HOME`/winmenu')', `sinclude(TWM_CONFIG_SDIR`/winmenu')')
divert(MENUS)dnl
`##' including TWM_CONFIG_HOME/stylemenu
sinclude(TWM_CONFIG_HOME`/stylemenu')
divert(MENUS)dnl
#
# And a menus with the usual things
#
menu "twmops"
{
"Twm"	f.title
"Iconify"	f.iconify
"Resize"	f.resize
"Move"		f.move
"Raise"		f.raise
"Lower"		f.lower
""		f.nop
"Focus"		f.focus
"Unfocus"	f.unfocus
"Show Iconmgr"	f.showiconmgr
"Hide Iconmgr"	f.hideiconmgr
""		f.nop
"Xterm"		f.exec "exec xterm &"
""		f.nop
"Kill"		f.destroy
"Delete"	f.delete
""		f.nop
"Styles"        f.menu "twmstyles"
"Restart"	f.restart
"Exit"		f.quit
}
divert(MENUS)dnl
`##' including TWM_CONFIG_HOME/menu
syscmd(`test -r "'TWM_CONFIG_HOME`/menu"')dnl
ifelse(sysval, 0, `sinclude(TWM_CONFIG_HOME`/menu')', `sinclude(TWM_CONFIG_SDIR`/menu')')
divert(-1)
